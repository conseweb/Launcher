<?xml version="1.0" encoding="utf-8"?>
<com.bitants.launcherdev.integratefoler.PromotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/promotion_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:background="#ff0">
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
        	android:layout_height="fill_parent" 
        	android:text="周围的人正在用："
            />
    </LinearLayout>
    <com.bitants.launcherdev.integratefoler.PromotionGridView
        android:id="@+id/promotion_gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchMode="columnWidth"
        android:numColumns="3"
        android:verticalSpacing="10dp"      
		android:horizontalSpacing="10dp" 
		android:listSelector="#00000000"    
        android:background="#0ff" >
    </com.bitants.launcherdev.integratefoler.PromotionGridView>

</com.bitants.launcherdev.integratefoler.PromotionLayout>