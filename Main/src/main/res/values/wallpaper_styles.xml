<resources>
    
     <style name="SettingCustomStyle" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowBackground">@color/myphone_common_bg_color</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">42.0dip</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitleText</item>
        <item name="android:windowTitleBackgroundStyle">@style/PerferencesCustomWindowTitleBackground</item>
        <item name="android:listViewStyle">@style/customListView</item>
        <item name="android:listSeparatorTextViewStyle">@style/customListHeader</item>
    </style>
    
      <style name="customListHeader" 
       parent="@style/CustomListSeparator">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:paddingLeft">10dip</item>
	   <item name="android:background">@drawable/wallpaper_app_running_process_tab_bg</item>
	</style>
	
      <style name="CustomListSeparator">
        <item name="android:background">@drawable/wallpaper_app_running_process_tab_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5sp</item>
    </style>
    
        <style name="customListView" parent="@android:style/Widget.ListView">
		<item name="android:scrollbarSize">5.0dip</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scrollbarThumbVertical">@drawable/wallpaper_pre_scrollbar_handle_vertical</item>
        <item name="android:listSelector">@drawable/myphone_click_item_blue</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@drawable/wallpaper_preference_divline</item>
    </style>
    
       <style name="PerferencesCustomWindowTitleBackground">
        <item name="android:background">@drawable/common_title_bg</item>
    </style>

</resources>