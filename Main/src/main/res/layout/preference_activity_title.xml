<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_title_bg" >

    <TextView
        android:id="@+id/preference_activity_title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myphone_top_content"
        android:gravity="center"
        android:text="123"
        android:textColor="#cdf2ff"
        android:textSize="@dimen/myphone_title_text_size" />

    <LinearLayout
        android:id="@+id/preference_activity_title_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/common_menu_selector"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_back" />
    </LinearLayout>

</FrameLayout>