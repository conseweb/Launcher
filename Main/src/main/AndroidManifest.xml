<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitants.launcher"
    android:versionCode="56"
    android:versionName="1.0.0.55"
	android:installLocation="internalOnly"
	android:sharedUserId="com.bitants.launcher.uid"
	 >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- <uses-permission android:name="android.permission.BIND_APPWIDGET" /> -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <!--往sdcard中写入数据的权限 -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<!--在sdcard中创建/删除文件的权限 -->
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
	<!-- IMEI号等 -->
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
    <use-permission android:name="android.permission.BIND_WALLPAPER" />

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" >
    </uses-feature>

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="10"/>

    <application android:name="com.bitants.launcherdev.AppController"
        android:icon="@drawable/ic_launcher"
        android:label="MirrorLauncher" >

        <meta-data android:name="leancloud" android:value="LeanCloud"/>

        <activity
            android:name="com.bitants.launcherdev.launcher.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.MONKEY" />
                <category android:name="android.intent.category.THIRD_PKG_CHECK" />
            </intent-filter>
        </activity>

        <activity android:name="com.bitants.launcherdev.launcher.Launcher"
		    android:label="@string/app_name"
			android:launchMode="singleTask" android:clearTaskOnLaunch="true"
			android:stateNotNeeded="true" android:theme="@style/Fullscreen"
			android:configChanges="locale|keyboardHidden|orientation" 
			android:screenOrientation="portrait" android:windowSoftInputMode="stateUnspecified|adjustPan">
			<intent-filter>
				<action android:name="com.bitants.launcherdev.launcher.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
        
        <!-- The settings provider contains Home's data, like the workspace favorites -->
		<provider android:name="com.bitants.launcherdev.launcher.LauncherProvider"
			android:authorities="com.bitants.launcherdev.settings" />
		
		<!-- Intent received used to install shortcuts from other applications -->
		<receiver android:name="com.bitants.common.launcher.broadcast.InstallShortcutReceiver"
			android:permission="com.android.launcher.permission.INSTALL_SHORTCUT">
			<intent-filter>
				<action android:name="com.android.launcher.action.INSTALL_SHORTCUT" />
				<action android:name="com.nd.pandahome.install_shortcut" />
			</intent-filter>
		</receiver>

		<!-- Intent received used to uninstall shortcuts from other applications -->
		<receiver android:name="com.bitants.common.launcher.broadcast.UninstallShortcutReceiver"
			android:permission="com.android.launcher.permission.UNINSTALL_SHORTCUT">
			<intent-filter>
				<action android:name="com.android.launcher.action.UNINSTALL_SHORTCUT" />
			</intent-filter>
		</receiver>
		
		<receiver android:name="com.bitants.launcherdev.launcher.ApplicationChangeReceiver">
			<intent-filter>
				<action android:name="android.intent.action.PACKAGE_ADDED" />
				<action android:name="android.intent.action.PACKAGE_REMOVED" />
				<action android:name="android.intent.action.PACKAGE_CHANGED" />
				<data android:scheme="package" />
			</intent-filter>
		</receiver>
          
		<!-- 应用列表 -->
		<activity
			android:name="com.bitants.launcherdev.launcher.appslist.AppslistActivity"
			android:screenOrientation="portrait" android:theme="@style/Transparent" />
		
		<!-- 程序打开选择框 -->
		<activity
			android:name="com.bitants.launcherdev.app.AppResolverSelectActivity"
			android:screenOrientation="portrait" android:theme="@style/TipDialog" />
        
        <!-- 桌面设置入口 -->
        <activity
            android:name="com.bitants.launcherdev.settings.HomeSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.bitants.launcherdev.settings.GestureSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingCustomStyle" />
         <activity
            android:name="com.bitants.launcherdev.settings.CardScreenSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingCustomStyle" />
         <activity
            android:name="com.bitants.launcherdev.settings.DynamicSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingCustomStyle" />
		<activity
            android:name="com.bitants.launcherdev.settings.MoreSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingCustomStyle" />
		<activity
            android:name="com.bitants.launcherdev.settings.ShareLauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingCustomStyle" />
		<activity
            android:name="com.bitants.launcherdev.settings.AboutLauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingCustomStyle" />
		<activity
            android:name="com.bitants.launcherdev.settings.SettingsItemSelectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingCustomStyle" />


        <!-- boost -->
        <activity
            android:name="com.bitants.boost.CleanActivity"
            android:theme="@style/MTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bitants.boost.MainActivity"
                  android:theme="@style/MTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <service android:name="com.bitants.boost.CleanService"> </service>
        <activity android:name="com.bitants.boost.SetWhiteListActivity"></activity>
        <!-- end of boost -->

        <!-- livewallpaper -->
        <service
            android:name="com.bitants.wallpaper.GIFWallpaperService"
            android:enabled="true"
            android:label="GIF Wallpaper"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>
        <!-- end of livewallpaper -->

    </application>
</manifest>